<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MusicPlayer"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/covers">

        <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CoverFlow.CoverFlow
            xmlns:coverflow="http://schemas.android.com/apk/res-auto"
            coverflow:imageWidth="175dp"
            coverflow:imageHeight="250dp"
            android:id="@+id/coverflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/covers"
        android:layout_alignParentLeft="true"
        android:id="@+id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Song Title"
            android:id="@+id/textView_title"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/artist"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Artist Name(s)"
            android:id="@+id/textView_artist"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/album"
        android:layout_below="@+id/artist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Album Name"
            android:id="@+id/textView_album"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/album"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/seekbar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/currentTime">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="01:03"
                android:id="@+id/textView_currentPosition"
                android:layout_gravity="center" />
        </LinearLayout>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/seekBar"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="07:40"
                android:id="@+id/textView_songDuration"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/seekbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="125dp"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/BPM.SPM">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="85dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="102"
                            android:id="@+id/textView_bpm"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="BPM"
                            android:id="@+id/textView"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="85dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="108"
                            android:id="@+id/textView_spm"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="SPM"
                            android:id="@+id/textView3"
                            android:layout_gravity="center"
                            android:singleLine="false" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/settings">

                <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CircleButton.CircleButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/setting_icon"
                    app:cb_color="#585858"
                    app:cb_pressedRingWidth="0dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:id="@+id/settingsButton"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:layout_rowSpan="2"
                    android:onClick="setContentView"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="25dp" />
            </LinearLayout>

        </LinearLayout>


        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="3"
            android:rowCount="7">

           <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CircleButton.CircleButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/stop_icon"
                app:cb_color="#DF0101"
                app:cb_pressedRingWidth="0dp"
                android:layout_row="4"
                android:layout_column="0"
                android:id="@+id/stopButton"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:layout_rowSpan="3"
                android:onClick=""
                android:layout_columnSpan="2"
               android:layout_marginTop="25dp"
               android:layout_gravity="left|bottom"
               android:layout_marginLeft="10dp" />

            <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CircleButton.CircleButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/previous_icon"
                app:cb_color="#0040FF"
                app:cb_pressedRingWidth="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/previousButton"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:layout_rowSpan="3"
                android:onClick=""
                android:layout_columnSpan="2"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp" />

            <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CircleButton.CircleButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/next_icon"
                app:cb_color="#0040FF"
                app:cb_pressedRingWidth="0dp"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/nextButton"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:onClick=""
                android:layout_columnSpan="1"
                android:layout_rowSpan="3"
                android:cropToPadding="false"
                android:layout_gravity="top|right" />

            <com.example.sw802f15.tempoplayer.MusicPlayerGUI.CircleButton.CircleButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/play_icon"
                app:cb_color="#99CC00"
                app:cb_pressedRingWidth="0dp"
                android:layout_row="2"
                android:layout_column="1"
                android:id="@+id/playButton"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:onClick=""
                android:layout_columnSpan="2"
                android:layout_rowSpan="5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="35dp" />
        </GridLayout>

    </LinearLayout>

</RelativeLayout>
